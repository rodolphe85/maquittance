<%= simple_form_for @landlord do |f| %>
  <%= f.input :name, label: 'Your name please', error: 'Username is mandatory, please specify one' %>
  <%= f.input :street, hint: 'No special characters.' %>
  <%= f.input :city, placeholder: 'your town' %>
  <%= f.input :zip, inline_label: 'Yes, remember me' %>
  <%= f.input :phone, placeholder: 'user@domain.com' %>
  <%= f.input :email, placeholder: 'user@domain.com' %>

  <%= f.button :submit %>
<% end %>
